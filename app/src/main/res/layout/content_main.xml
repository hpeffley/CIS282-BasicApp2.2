<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.dtcc.emailman.test2.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Click to get the current time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnGetTimeClicked"
        android:id="@+id/btnGetTime" />

    <TextView
        android:text="@string/text_view_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetTime"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:id="@+id/tvDisplayTime"
        android:textSize="32sp" />
</RelativeLayout>
